<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    tools:context="com.example.abdullah.wifimessenger.Registration"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/SignUP_page"
    android:background="#E43F3F">

    <EditText
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phoneID"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/editText2"
        android:layout_toEndOf="@+id/editText2" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signup_btn"
        android:layout_below="@+id/phoneID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />
    
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_above="@+id/phoneID"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:text="Wifi Meesenger" />
</RelativeLayout>
